<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Movie List</h1>
    <table>
        <thead>
            <tr>
                <th>Flight's airline</th>
                <th>Airport</th>
                <th>Flight No</th>
                <th>Departure date/time</th>
            </tr>
        </thead>
        <tbody>
            <% movies.forEach(function(m) { %>
                <tr>
                    <td><%= m.title %></td>
                    <td><%= m.releaseYear %></td>
                    <td><%= m.mpaaRating %></td>
                    <td><%= m.cast.join(', ') %></td>
                    <td><%= m.nowShowing ? 'Yes' : 'Nope' %></td>
                </tr>
            <% }); %>
        </tbody>
  </body>
</html>
