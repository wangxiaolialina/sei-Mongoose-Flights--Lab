<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Flight's<br>Airline</th>
      <th>Airport</th>
      <th>Flight's<br>No</th>
      <th>Departure<br>Time</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>